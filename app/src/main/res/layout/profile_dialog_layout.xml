<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/profile_dialog_background"
    android:layout_height="@dimen/_520sdp">



    <LinearLayout
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_dialog_cancel_button"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/x_logo"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"/>

        <ImageView

            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/google_logo"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/_3sdp"
        app:cardBackgroundColor="@color/profile_dialog_page_cardview_color"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_390sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/profile"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_30sdp"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:text="Sample Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/app_text_color"
                        android:textSize="@dimen/_9ssp"
                        android:text="Sample123@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_border"
                    android:src="@drawable/arrow_drop_down"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/top_charts_buttons_background"
                android:gravity="center"
                android:paddingEnd="@dimen/_13sdp"
                android:paddingStart="@dimen/_13sdp"
                android:textColor="@color/dark_grey"
                android:text="Manage your Google Account"
                android:layout_marginStart="@dimen/_45sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/recommended_actions_logo"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="Recommended actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/manage_apps_and_device_logo"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="@string/manage_apps_and_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/notification_icon"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="@string/notifications_and_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/payments_and_subscriptions_logo"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="@string/payments_and_subscriptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/play_protect_logo"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="Play protect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/library_logo"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="Library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/play_pass_logo"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11ssp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:text="Play pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/settings_logo"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/help_and_feedback_logo"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="@string/profile_page_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>