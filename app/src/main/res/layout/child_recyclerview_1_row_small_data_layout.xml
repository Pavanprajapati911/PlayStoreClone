<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:paddingStart="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/child_rv_1_row_small_gamelogo"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/child_rv_1_row_small_gametitle"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/_10ssp"
        android:text="Logiclike: games for kids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/child_rv_1_row_small_gameratings"
            android:layout_marginTop="@dimen/_1sdp"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/app_text_color"
            android:text="4.5 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/star_icon"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"/>

        <TextView
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/child_rv_1_row_small_gamePrice"
            android:layout_marginTop="@dimen/_1sdp"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/app_text_color"
            android:text="â‚¹750.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>