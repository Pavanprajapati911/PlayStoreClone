<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_15sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/child_rv_1_row_verysmall_position"
            android:textColor="@color/app_text_color"
            android:gravity="center"
            android:text="1"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"/>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/_7sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/child_rv_1_row_verysmall_image"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/child_rv_1_row_verysmall_gamename"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/dark_grey"
                android:text="Game name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/child_rv_1_row_verysmall_gametype"
                android:textSize="@dimen/_9ssp"
                android:gravity="center_vertical"
                android:textColor="@color/app_text_color"
                android:text="Game Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/child_rv_1_row_verysmall_game_ratings"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/app_text_color"
                    android:text="4.6 *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/child_rv_1_row_verysmall_game_size"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_9ssp"
                    android:text="100 MB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>