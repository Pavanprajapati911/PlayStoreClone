<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_15sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/child_rv_1_row_books_verysmall_position"
        android:textColor="@color/app_text_color"
        android:gravity="center"
        android:text="1"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/child_rv_1_row_books_verysmall_booklogo"
            android:scaleType="fitXY"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_65sdp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/child_rv_1_row_books_verysmall_bookname"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/dark_grey"
            android:text="Game name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/child_rv_1_row_books_verysmall_companyname"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_9ssp"
            android:gravity="center_vertical"
            android:textColor="@color/app_text_color"
            android:text="Game Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/child_rv_1_row_books_verysmall_type"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/app_text_color"
                android:text="Ebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/child_rv_1_row_books_verysmall_ratings"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_9ssp"
                android:text="4.5*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/child_rv_1_row_books_verysmall_bookprice"
            android:textSize="@dimen/_9ssp"
            android:text="â‚¹353.56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>