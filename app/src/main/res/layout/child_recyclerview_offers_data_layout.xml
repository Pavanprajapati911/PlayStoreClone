<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">

        <TextView
            android:id="@+id/child_rv_offers_maintitle"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_17sdp"
            android:text="Suggested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:contentPaddingBottom="@dimen/_10sdp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:cardElevation="@dimen/_1sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/child_rv_offer_offer_iamge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/child_rv_offer_game_name"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/app_text_color"
                        android:text="game name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>

                    <TextView
                        android:id="@+id/child_rv_offers_title"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/black"
                        android:text="Offers title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/tab_color"
                        android:text="Learn more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>