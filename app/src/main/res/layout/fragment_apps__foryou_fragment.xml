<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".appspage_tab_fragments.Apps_Foryou_fragment">


       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/apps_for_you_recyclerview"
           android:paddingTop="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/loading_animation_Background_Apps__For_you"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_520sdp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="@dimen/_200sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/loading_animation_App__For_you"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_lottie_animation" />

    </RelativeLayout>


</RelativeLayout>




